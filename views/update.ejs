<%-include('./includes/head.ejs');-%>
<body>
    
    <div class="homeContainer">
        <%- include('./includes/navigation.ejs');-%>
       <form method="post" action="/update/<%=blog.id%>" class="w-[100%] min-h-[90vh]  flex flex-col items-center">
            <div class="h-[20vh] w-[100%] flex justify-center items-center">
                <input value="<%=blog.title%>" class="h-[80%] w-[90%] text-3xl font-semibold border-none outline-none placeholder:text-black" type="text" name="title" placeholder="Title" required/>
            </div>
            <div class="h-[60vh] w-[100%]  flex justify-center items-center">
                <textarea style="resize: none;" class="h-[100%] w-[90%] border-none outline-none"  name="description" placeholder="Description" required><%=blog.description%></textarea>
            </div>
                <button class="bg-green-500 h-[6vh] w-[60%] text-white font-semibold hover:bg-slate-800" type="submit">Update</button>
            
       </form>
    </div>
    <script></script>
</body>
<%-include('./includes/end.ejs');-%>